<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Mission Control' %> | ATC-Drone</title>
    
    <!-- SEO -->
    <meta name="description" content="ATC-Drone Mission Control - Real-time drone traffic management and monitoring">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    
    <!-- Styles -->
    <link rel="stylesheet" href="/assets/css/mission-control.css">
    <link rel="stylesheet" href="/assets/css/camera-controls.css">

    <meta name="csrf-token" content="<%= csrfToken || '' %>">

    <script nonce="<%= cspNonce %>">
        // Required for Cesium to locate Workers/Assets when loaded from /assets/Build/Cesium/.
        window.CESIUM_BASE_URL = "/assets/Build/Cesium/";
    </script>
    
    <%- typeof head !== 'undefined' ? head : '' %>
</head>
<body>
    <div class="app-container">
        <!-- Header -->
        <%- include('../partials/header', { activePage: activePage || 'dashboard' }) %>
        
        <!-- Main Content -->
        <main class="main-content">
            <%- body %>
        </main>
        
        <!-- Status Bar -->
        <%- include('../partials/status-bar') %>
    </div>
    
	    <script nonce="<%= cspNonce %>">
	        window.APP_USER = <%- safeJson(user || null) %>;
	        window.__CSRF_TOKEN__ = <%- safeJson(csrfToken || '') %>;
	        window.__ATC_API_BASE__ = <%- safeJson(typeof atcApiBase !== 'undefined' ? atcApiBase : '') %>;
	        window.__ATC_WS_BASE__ = <%- safeJson(typeof atcWsBase !== 'undefined' ? atcWsBase : '') %>;
	        window.__ATC_WS_TOKEN__ = <%- safeJson(typeof atcWsToken !== 'undefined' ? atcWsToken : '') %>;
	        window.__ATC_COMPLIANCE_LIMITS__ = <%- safeJson(typeof complianceLimits !== 'undefined' ? complianceLimits : {}) %>;
	        window.__ROUTE_ENGINE_CONFIG__ = <%- safeJson(typeof routeEngineConfig !== 'undefined' ? routeEngineConfig : {}) %>;
	        window.__ROUTE_PLANNER_CONFIG__ = <%- safeJson(typeof routePlannerConfig !== 'undefined' ? routePlannerConfig : {}) %>;
	        window.__CESIUM_CONFIG__ = {
	            ionToken: <%- safeJson(cesiumIonToken || '') %>,
	            ionBaseImageryAssetId: <%- safeJson(ionBaseImageryAssetId || null) %>,
	            google3dTilesAssetId: <%- safeJson(google3dTilesAssetId || null) %>,
	            osmBuildingsAssetId: <%- safeJson(osmBuildingsAssetId || null) %>
	        };
	    </script>
    <script nonce="<%= cspNonce %>">
        window.escapeHtml = window.escapeHtml || function (value) {
            return String(value ?? '')
                .replace(/&/g, '&amp;')
                .replace(/</g, '&lt;')
                .replace(/>/g, '&gt;')
                .replace(/"/g, '&quot;')
                .replace(/'/g, '&#39;');
        };
    </script>
    <!-- Core Scripts -->
    <script src="/assets/js/camera-controls.js"></script>
    <script src="/assets/js/api-client.js"></script>
    <script src="/assets/js/cesium-ion.js"></script>
    <%- typeof scripts !== 'undefined' ? scripts : '' %>
</body>
</html>
