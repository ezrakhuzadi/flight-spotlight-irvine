<%- include('layouts/main', { title: 'Remote ID' , activePage: 'remote-id' , head: ` <!-- CesiumJS -->
    <script src="/assets/Build/Cesium/Cesium.js"></script>
    <style>
        @import url(/assets/Build/Cesium/Widgets/widgets.css);

        #cesiumContainer {
            width: 100%;
            height: 100%;
        }

        .rid-sidebar {
            width: 400px;
            background: var(--bg-secondary);
            border-left: 1px solid var(--border-color);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .rid-sidebar-header {
            padding: var(--spacing-md);
            border-bottom: 1px solid var(--border-color);
            background: var(--bg-primary);
        }

        .rid-sidebar-content {
            flex: 1;
            overflow-y: auto;
            padding: var(--spacing-md);
        }

        .rid-aircraft {
            background: var(--bg-tertiary);
            border: 1px solid var(--border-color);
            border-radius: var(--radius-md);
            padding: var(--spacing-md);
            margin-bottom: var(--spacing-sm);
            cursor: pointer;
            transition: all var(--transition-fast);
        }

        .rid-aircraft:hover {
            background: var(--bg-hover);
            border-color: var(--accent-blue);
        }

        .rid-aircraft.selected {
            border-color: var(--accent-blue);
            box-shadow: 0 0 0 2px rgba(56, 189, 248, 0.2);
        }

        .rid-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 8px;
        }

        .rid-id {
            font-weight: 600;
            font-family: var(--font-mono);
            color: var(--accent-cyan);
        }

        .rid-type {
            font-size: 10px;
            padding: 2px 6px;
            border-radius: 4px;
            background: rgba(56, 189, 248, 0.2);
            color: var(--accent-blue);
        }

        .rid-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4px;
            font-size: 12px;
        }

        .rid-detail {
            color: var(--text-muted);
        }

        .rid-detail-value {
            color: var(--text-primary);
            font-family: var(--font-mono);
        }

        .compliance-badge {
            display: inline-flex;
            align-items: center;
            gap: 4px;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 11px;
            font-weight: 500;
        }

        .compliance-badge.compliant {
            background: rgba(34, 197, 94, 0.2);
            color: var(--accent-green);
        }

        .compliance-badge.non-compliant {
            background: rgba(239, 68, 68, 0.2);
            color: var(--accent-red);
        }
    </style>
    `,
    body: `
    <!-- Full-width layout -->
    <div class="content-area no-padding" style="display: flex;">
        <!-- Map Container -->
        <div style="flex: 1; position: relative;">
            <div id="cesiumContainer"></div>

            <!-- Status Overlay -->
            <div style="position: absolute; top: 16px; left: 16px; z-index: 10;">
                <div
                    style="background: rgba(15, 23, 42, 0.9); backdrop-filter: blur(8px); padding: 12px 16px; border-radius: 8px; border: 1px solid var(--border-color);">
                    <div style="font-size: 11px; color: var(--text-muted); margin-bottom: 4px;">ASTM F3411 Remote ID
                    </div>
                    <div style="display: flex; align-items: center; gap: 8px;">
                        <span class="status-dot" id="ridStatusDot" style="background: var(--accent-yellow);"></span>
                        <span id="ridStatusText">Connecting to Flight Blender...</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <aside class="rid-sidebar">
            <div class="rid-sidebar-header">
                <div class="card-title">Remote ID Aircraft</div>
                <p class="text-muted" style="font-size: 12px; margin-top: 4px;">Network Remote ID per ASTM F3411</p>
            </div>

            <div class="rid-sidebar-content">
                <!-- Stats -->
                <div class="stats-grid mb-md" style="grid-template-columns: repeat(2, 1fr); gap: 8px;">
                    <div class="stat-card" style="padding: 12px;">
                        <div class="stat-value" id="ridTotalCount">0</div>
                        <div class="stat-label" style="font-size: 10px;">Total Aircraft</div>
                    </div>
                    <div class="stat-card highlight-green" style="padding: 12px;">
                        <div class="stat-value" id="ridCompliantCount">0</div>
                        <div class="stat-label" style="font-size: 10px;">RID Compliant</div>
                    </div>
                </div>

	                ${ typeof demoMode !== 'undefined' && demoMode ? `
	                <div class="mb-md">
	                    <button class="btn btn-ghost btn-sm" id="ridDemoBtn" type="button">
	                        Load demo RID traffic
	                    </button>
	                </div>
	                ` : '' }

                <!-- Aircraft List -->
                <div class="section-subtitle">Tracked Aircraft</div>
                <div id="ridAircraftList">
                    <div class="empty-state" style="padding: 20px; text-align: center;">
                        <div class="text-muted">Waiting for Remote ID data...</div>
                    </div>
                </div>

                <!-- Selected Aircraft Details -->
                <div id="selectedAircraftPanel" style="display: none;">
                    <div class="section-subtitle mt-lg">Aircraft Details</div>
                    <div class="card">
                        <div class="card-body" style="padding: 12px;">
                            <div id="selectedAircraftDetails"></div>
                        </div>
                    </div>
                </div>
            </div>
        </aside>
    </div>
    `,
    scripts: `
    <script src="/assets/js/remote-id.js"></script>
    `
    }) %>
